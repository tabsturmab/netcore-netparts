@using Address = NetParts.Models.Address
@model X.PagedList.IPagedList<NetParts.Models.Address>
@{
    ViewData["Title"] = "Index";
}
<br />
<h1>@SR["Address"]</h1>

<a asp-action="Create" class="btn btn-primary">@SR["Create"]</a>
<br />
<br />

@{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }
<br />
<br />
@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">@SR["Address"]</th>
                    <th scope="col">@SR["Number"]</th>
                    <th scope="col">@SR["Complement"]</th>
                    <th scope="col">@SR["Zip Code"]</th>
                    <th scope="col">@SR["Neighborhood"]</th>
                    <th scope="col">@SR["City"]</th>
                    <th scope="col">@SR["State"]</th>
                    <th scope="col">@SR["Assistance"]</th>
                    <th scope="col">@SR["Action"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (NetParts.Models.Address address in Model)
                {
                <tr>
                    <td>@address.Address1</td>
                    <td>@address.NumberAta</td>
                    <td>@address.Complement</td>
                    <td>@address.ZipCode</td>
                    <td>@address.District</td>
                    <td>@address.City</td>
                    <td>@address.State1</td>
                    <td>@address.TechnicalAssistance.SocialReason</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@address.IdAddress" class="btn btn-secondary">@SR["Update"]</a>
                        <a asp-action="Delete" asp-route-id="@address.IdAddress" class="btn btn-danger">@SR["Delete"]</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
}
else
{
    <span>@SR["No registration registered!"]</span>
}