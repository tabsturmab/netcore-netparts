@model NetParts.Models.Address
@{
    ViewData["Title"] = "Add Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*remove-cep*@
<form method="post">
    <main role="main">

        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        @SR["Add Address"]
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <h4 class="card-title mt-2">@SR["Register"]</h4>
                            </header>
                            <article class="card-body">
                                @{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }
                                <div class="form-group col-md-6">
                                    @*<input type="hidden" asp-for="IdTecAssistance" />*@
                                    <label asp-for="ZipCode">@SR["Zip Code"]</label>
                                    <input asp-for="ZipCode" class="form-control form-control-lg cep" placeholder=@SR["Enter zip code"]>
                                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                                    <div class="alert alert-danger" style="display:none;"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Address1">@SR["Address"]</label>
                                    <input asp-for="Address1" class="form-control" placeholder=@SR["Enter address"]>
                                    <span asp-validation-for="Address1" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="NumberAta">@SR["Number"]</label>
                                        <input asp-for="NumberAta" class="form-control" placeholder=@SR["Enter number"]>
                                        <span asp-validation-for="NumberAta" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Complement">@SR["Complement"]</label>
                                        <input asp-for="Complement" class="form-control" placeholder=@SR["Enter complement"]>
                                        <span asp-validation-for="Complement" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label asp-for="District">@SR["Neighborhood"]</label>
                                        <input asp-for="District" class="form-control" readonly="readonly" placeholder=@SR["Enter neighborhood"]>
                                        <span asp-validation-for="District" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="City">@SR["City"]</label>
                                        <input asp-for="City" class="form-control" readonly="readonly" placeholder=@SR["Enter city"]>
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="State1">@SR["State"]</label>
                                        <input asp-for="State1" class="form-control" readonly="readonly" placeholder=@SR["Enter state"]>
                                        <span asp-validation-for="State1" class="text-danger"></span>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block">@SR["Save"]</button>
                            </article>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</form>
