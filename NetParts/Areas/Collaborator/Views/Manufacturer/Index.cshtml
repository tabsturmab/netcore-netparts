@model X.PagedList.IPagedList<NetParts.Models.Manufacturer>
@{
    ViewData["Title"] = "Index";
}
<br />
<h1>@SR["Manufacturer"]</h1>

<a asp-action="Create" class="btn btn-primary">@SR["Create"]</a>

@{ await Html.RenderPartialAsync("~/Views/Shared/_Message.cshtml"); }
<br />
<br />
@if (Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">@SR["Code"]</th>
                <th scope="col">@SR["Name Manufacturer"]</th>
                <th scope="col">@SR["Action"]</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Manufacturer manufacturer in Model)
            {
                <tr>
                    <th scope="row">@manufacturer.IdManufacturer</th>
                    <td>@manufacturer.NameManufacturer</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@manufacturer.IdManufacturer" class="btn btn-secondary">@SR["Update"]</a>
                        <a asp-action="Delete" asp-route-id="@manufacturer.IdManufacturer" class="btn btn-danger">@SR["Delete"]</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
}
else
{
    <span>@SR["No registration registered!"]</span>
}